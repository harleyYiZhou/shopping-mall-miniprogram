/* pages/catagory/catagory.wxss */

.search {
   background: #eee;
   border-radius: 10rpx;
   margin: 10rpx 30rpx 10rpx 30rpx;
   padding: 5rpx 15rpx 5rpx 15rpx;
   height: 50rpx;
}

.zan-icon-search {
   font-size: 150%;
   margin-left: 10rpx;
}

.input-content {
   font-size: 35rpx;
   color: #666;
   margin-left: 20rpx;
}

.catagory {
   border-top: 1rpx solid #eee;
}

.catagory-title {
   border-right: 1rpx solid #eee;
}

.catagory-title .levelOne {
	box-sizing: border-box;
   width: 100%;
   height: 70rpx;
	line-height: 70rpx;
	font-size: 30rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.selecte {
   font-weight: bold;
   color: brown;
   border-bottom: 2rpx solid brown;
}

.levelSecImg {
   border-radius: 50%;
}
