<!--pages/catagory/catagory.wxml-->
<import src="../components/bottom-nav/bottom-nav" />

<view class="layout-column ">
  <view class="search layout-row layout-wrap ">
    <view class="zan-icon zan-icon-search"></view>
    <input class="input-content" placeholder='出行季 最高减200'></input>
  </view>
  <view class="catagory layout-row width-100">
    <view class="catagory-title layout-column">
      <scroll-view scroll-y style="height: {{scrollHeight}}rpx;" bindscrolltoupper="" bindscrolltolower="" bindscroll="" scroll-into-view="" scroll-top="{{scrollTop}}">
        <view class="levelOne margin-x-10 text-center {{index===tapIndex?'selecte':'false'}}" wx:for="{{catagory.levelOne}}" data-index="{{index}}" bindtap='chooseLevel'>{{item.title}}</view>
      </scroll-view>
    </view>
    <view class="catagory-subtitle flex padding-x-10 padding-y-10 layout-column ">
      <view>
        <image mode="widthFix" class="width-100" src="../../image/img/food1.jpg"></image>
      </view>
      <view class="text-center margin-top-10 margin-bottom-20">
        <text>有品生活哲学</text>
      </view>
      <view class="layout-row layout-wrap  layout-justify-between">
        <view wx:for="{{catagory.levelOne[tapIndex].leverSec}}" class="width-30 text-center margin-bottom-10">
          <image class="square-100 levelSecImg" src="{{item.src}}"></image>
          <view>{{item.title}}</view>
        </view>
      </view>
    </view>
  </view>
</view>
<template is="bottom-nav" data="{{trans,selected}}"></template>