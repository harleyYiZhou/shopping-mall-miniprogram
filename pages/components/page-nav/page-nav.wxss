/* pages/components/page-nav/page-nav.wxss */

.type-container {
    width: 100%;
    height: 88rpx;
     background-color: #fff; 
    overflow: hidden;
    position: fixed;
     top: 0; 
    left: 0rpx;
    z-index: 1000;
	/* background-color: #e0e0e0; */
}

.type-navbar {
    white-space: nowrap;
    height: 88rpx;
    width: 100%;
}

.type-box {
    width: 187.5rpx;
    box-sizing: content-box;
    font-size: 30rpx;
    line-height: 84rpx;
    text-align: center;
    display: inline-block;
    overflow: hidden;
}

.type-navbar-item {
    border-bottom: 4rpx solid #fff;
}

.type-item-on {
    border-bottom: 4rpx solid #e64340;
}
